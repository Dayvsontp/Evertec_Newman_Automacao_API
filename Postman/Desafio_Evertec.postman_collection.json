			"name": "Listar_Breeds",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// 1. Validação do Status Code\r",
							"pm.test(\"Status code é 200 OK\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"\r",
							"pm.test(\"Extrair um Breed para a próxima requisição\", function () {\r",
							"    const responseData = pm.response.json();\r",
							"\r",
							"    const breedsObject = responseData.message;\r",
							"\r",
							"    const breedNames = Object.keys(breedsObject);\r",
							"    \r",
							"    pm.expect(breedNames.length).to.be.above(0, \"A lista de raças não deve estar vazia.\");\r",
							" \r",
							"    const randomIndex = Math.floor(Math.random() * breedNames.length);\r",
							"  \r",
							"    const selectedBreed = breedNames[randomIndex];\r",
							"    \r",
							"    pm.environment.set(\"current_breed\", selectedBreed);\r",
							"    \r",
							"    console.log(\"Raça salva no ambiente: \" + selectedBreed);\r",
							"});\r",
							"\r",
							"pm.test(\"Status no corpo da resposta é 'success'\", function () {\r",
							"    const responseData = pm.response.json();\r",
							"    pm.expect(responseData.status).to.eql(\"success\");\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
